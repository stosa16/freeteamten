<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.sw2017.pocketdiary.ShowStatistic">


    <ImageButton
        android:id="@+id/stat_analysis_btn_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintRight_toLeftOf="@+id/stat_analysis_btn_location"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="20dp" />

    <ImageButton
        android:id="@+id/stat_analysis_btn_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_mylocation"
        app:layout_constraintRight_toLeftOf="@+id/stat_analysis_btn_friends"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp" />

    <ImageButton
        android:id="@+id/stat_analysis_btn_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_myplaces"
        app:layout_constraintRight_toLeftOf="@+id/stat_analysis_btn_dates"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp" />

    <ImageButton
        android:id="@+id/stat_analysis_btn_dates"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_my_calendar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toLeftOf="@+id/stat_analysis_btn_calendar"
        android:layout_marginRight="20dp" />

    <ImageButton
        android:id="@+id/stat_analysis_btn_calendar"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_today"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp" />

    <Button
        android:id="@+id/stat_analysis_categories"
        style="@style/ButtonRed"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/stat_analysis_btn_location"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/stat_analysis_delete_stat"
        style="@style/ButtonRed"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:text="Delete statistic"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/stat_analysis_categories"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ListView
        android:id="@+id/stat_analysis_lv"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/stat_analysis_delete_stat"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <GridView
        android:id="@+id/stat_analysis_pictures"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnWidth="120dp"
        android:numColumns="3"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_marginTop="211dp"
        app:layout_constraintTop_toBottomOf="@+id/stat_analysis_categories"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/stat_analysis_categories"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/stat_analysis_categories"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="1.0" />


</android.support.constraint.ConstraintLayout>
